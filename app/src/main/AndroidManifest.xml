<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taller"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taller"
        tools:targetApi="31">

        <!-- ACTIVIDAD PRINCIPAL -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CRUD ACTIVITIES -->
        <activity android:name=".CreateActivity" android:exported="true" />
        <activity android:name=".ReadActivity" android:exported="true" />
        <activity android:name=".UpdateActivity" android:exported="true" />
        <activity android:name=".DeleteActivity" android:exported="true" />

        <!-- CALCULADORA -->
        <activity android:name=".CalculadoraActivity" android:exported="true" />

    </application>

</manifest>
